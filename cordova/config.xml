<?xml version='1.0' encoding='utf-8'?>
<widget id="org.qubic.wallet" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Qubic Wallet</name>
    <description>Official Web Wallet</description>
    <author email="dev@cordova.apache.org" href="https://qubic.li">
        Qubic.li Developer Team
    </author>
    <!-- <content src="app/index.html" /> -->
    <!-- <allow-navigation href="app/*" />   -->
    <!-- <access origin="app/*" />
    <allow-intent href="app/*" /> -->

    <content src="app/index.html" />
    <allow-intent href="http://*/app/*" />
    <allow-intent href="https://*/app/*" />
    <platform name="android">
        <allow-intent href="market:*" />   
        <config-file target="AndroidManifest.xml" parent="/*" xmlns:android="http://schemas.android.com/apk/res/android">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>
    </platform>
    <platform name="ios">
        <!-- iOS-spezifische Konfigurationen -->
    </platform>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="350"/>
    <preference name="SplashScreen" value="assets/img/logo.png" />
    <preference name="SplashScreenBackgroundColor" value="#011A22" />
</widget>